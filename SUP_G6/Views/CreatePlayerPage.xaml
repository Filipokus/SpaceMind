<Page x:Class="SUP_G6.Views.CreatePlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePlayerPage">

    <Grid>

        <Border
            Background="White"
            CornerRadius="70"
            Width="1000"
            Height="810"
            Opacity="0.76"
            >


        </Border>
        <StackPanel>
            <Label Content="Create player" HorizontalAlignment="Center" Margin="0 200 0 40" FontSize="60"/>
            <TextBox x:Name="text" Text="{Binding Name, Mode=TwoWay}" TextWrapping="Wrap" Width="120"/>


        </StackPanel>
        <StackPanel>
            <Button x:Name="BtnCreatePlayer" Command="{Binding CreatePlayerCommand}" Content="Create" Height="25" Width="118" Margin="0 400 0 0" />
            <Button x:Name="BtnGoBackToStart" Content="Back" Height="25" Width="118" Click="BtnGoBackToStart_Click"/>
        </StackPanel>

    </Grid>
</Page>
