<Page x:Class="SUP_G6.Views.GamePlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views"
      xmlns:local1="clr-namespace:SUP_G6"
      mc:Ignorable="d" 
d:DesignHeight="450" d:DesignWidth="800"
      Title="GamePlayPage">
 <Border
            Background="White"
            CornerRadius="70"
            Width="1000"
            Height="810"
            Opacity="0.76"
            >
     <Grid>
       
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Column="1" Grid.Row="1" >
      <local1:Peg1/>
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.Row="2">
      <local1:Peg2/>
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.Row="3">
      <local1:Peg3/>
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.Row="4">
      <local1:Peg4/>
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.Row="5">
      <local1:Peg5/>
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.Row="6">
      <local1:Peg6 HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
       <StackPanel x:Name="stp1"  Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="4"
               AllowDrop="True"
               DragOver="panel_DragOver"
               Drop="panel_Drop" Background="LightYellow" Orientation="Horizontal">
       </StackPanel>
       <StackPanel Grid.Column="6" Grid.Row="1" Background="Orange">
         <Button Content="Lås in" Click="Button_Click"></Button>
       </StackPanel>
