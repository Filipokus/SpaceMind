<Page x:Class="SUP_G6.Views.GamePlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views"
      xmlns:local1="clr-namespace:SUP_G6"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GamePlayPage">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1.5*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Column="0" Background="White" Grid.Row="0" >
      <local1:Peg1/>
    </StackPanel>
    <StackPanel Grid.Column="0" Background="White" Grid.Row="1">
      <local1:Peg2/>
    </StackPanel>
    <StackPanel Grid.Column="0" Background="White" Grid.Row="2">
      <local1:Peg3/>
    </StackPanel>
    <StackPanel Grid.Column="0" Background="White" Grid.Row="3">
      <local1:Peg4/>
    </StackPanel>
    <StackPanel Grid.Column="0" Background="White" Grid.Row="4">
      <local1:Peg5/>
    </StackPanel>
    <StackPanel Grid.Column="0" Background="White" Grid.Row="5">
      <local1:Peg6 HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.Row="0"
        AllowDrop="True"
        DragOver="panel_DragOver"
        Drop="panel_Drop"
                Background="Azure">
    </StackPanel>
    <StackPanel Grid.Column="2" Grid.Row="0"
AllowDrop="True"
DragOver="panel_DragOver"
Drop="panel_Drop"
        Background="Azure">
    </StackPanel>
    <StackPanel Grid.Column="3" Grid.Row="0"
AllowDrop="True"
DragOver="panel_DragOver"
Drop="panel_Drop"
        Background="Azure">
    </StackPanel>
    <StackPanel Grid.Column="4" Grid.Row="0"
AllowDrop="True"
DragOver="panel_DragOver"
Drop="panel_Drop"
        Background="Azure">
    </StackPanel>
    <StackPanel x:Name="stpGuessRow2" Grid.Column="1" Grid.Row="1"
        AllowDrop="False"
        DragOver="panel_DragOver"
        Drop="panel_Drop"
                Background="LightGray">
    </StackPanel>
    <Grid Grid.Column="6" Grid.Row="0"
                Background="AliceBlue">
      <Ellipse x:Name="feedback1" VerticalAlignment="Top" HorizontalAlignment="Left" Height="15" Stroke="Black" Width="15"/>
      <Ellipse x:Name="feedback2" VerticalAlignment="Top" HorizontalAlignment="Right" Height="15" Stroke="Black" Width="15"/>
      <Ellipse x:Name="feedback3" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="15" Stroke="Black" Width="15"/>
      <Ellipse x:Name="feedback4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="15" Stroke="Black" Width="15"/>
    </Grid>
  </Grid>
</Page>
