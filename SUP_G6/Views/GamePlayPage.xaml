            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="5">
                <local1:Peg5/>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="6">
                <local1:Peg6 HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Spelplanen -->
            <WrapPanel x:Name="stp1" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="65"
               AllowDrop="True"
               DragOver="panel_DragOver"
               Drop="panel_Drop" Background="LightYellow" >
            </WrapPanel>

            <WrapPanel x:Name="stp2" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="65"
           AllowDrop="False"
