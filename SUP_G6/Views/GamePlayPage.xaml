<Page x:Class="SUP_G6.Views.GamePlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views"
      xmlns:local1="clr-namespace:SUP_G6"
      xmlns:local2="clr-namespace:SUP_G6.Converter"      
      mc:Ignorable="d" 
      Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={local2:RatioConverter}, ConverterParameter='0.9' }" 
      Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={local2:RatioConverter}, ConverterParameter='0.9' }"
      Title="GamePlayPage">
    <Page.Resources>
        <local2:ColorConverter x:Key="ColorConverter"/>
        <local2:VisibilityConverter x:Key="VisibilityConverter"/>
        <local2:LevelVisibilityConverter x:Key="LevelVisibilityConverter" />
        <local2:RatioConverter x:Key="RatioConverter"/>
    </Page.Resources>
    <Border
            Background="Black"
            CornerRadius="70"
            Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.8' }"
            Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={StaticResource RatioConverter}, ConverterParameter='0.8' }"
            Opacity="0.90"
            >
        <Grid Margin="0,0,120,23">

            <!-- Rad- och kolumndefinitioner -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Färgplupparna -->
            <WrapPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan ="4" ItemWidth="50" ItemHeight="45">
                <local1:Peg1/>
                <local1:Peg2 />
                <local1:Peg3/>
                <local1:Peg4/>
            </WrapPanel>
            <WrapPanel Visibility="{Binding MediumLevel, Converter={StaticResource LevelVisibilityConverter}}" Grid.Column="1" Grid.Row="5" Grid.RowSpan ="2" ItemWidth="50" ItemHeight="45">
                <local1:Peg5/>
                <local1:Peg6/>
            </WrapPanel>
            <WrapPanel Visibility="{Binding HardLevel, Converter={StaticResource LevelVisibilityConverter}}" Grid.Column="1" Grid.Row="7" Grid.RowSpan ="2" ItemWidth="50" ItemHeight="45">
                <local1:Peg7/>
                <local1:Peg8/>
            </WrapPanel>

            <!-- Spelplanen -->
            <WrapPanel x:Name="stp1" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
               AllowDrop="True"
               DragOver="panel_DragOver"
               Drop="panel_Drop" Background="LightYellow" >
            </WrapPanel>

            <WrapPanel x:Name="stp2" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray">
            </WrapPanel>

            <WrapPanel x:Name="stp3" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray">
            </WrapPanel>

            <WrapPanel x:Name="stp4" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray" >
            </WrapPanel>

            <WrapPanel x:Name="stp5" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray" >
            </WrapPanel>

            <WrapPanel x:Name="stp6" Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray" >
            </WrapPanel>

            <WrapPanel x:Name="stp7" Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray" >
            </WrapPanel>

            <WrapPanel x:Name="stp8" Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray" >
            </WrapPanel>

            <WrapPanel x:Name="stp9" Grid.Column="2" Grid.Row="9" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray" >
            </WrapPanel>

            <WrapPanel x:Name="stp10" Grid.Column="2" Grid.Row="10" Grid.ColumnSpan="4" ItemWidth="112" ItemHeight="45"
           AllowDrop="False"
           DragOver="panel_DragOver"
           Drop="panel_Drop"
                   Background="LightGray" >
            </WrapPanel>

            <!-- Spelknappen -->
            <WrapPanel Grid.Column="7" Grid.Row="1" ItemWidth="75" ItemHeight="45">
                <Button Style="{StaticResource ButtonTemplate}" Content="Gissa!" Click="Button_Click" Command="{Binding GuessCommand}" Margin="5 0 0 0" Height="45" FontSize="20" FontWeight="Bold"></Button>
            </WrapPanel>
            
            <!-- Number of Tries -->
            <StackPanel Orientation="Vertical" Grid.Column="7" Grid.Row="3" Grid.RowSpan="2" >
                <TextBlock Text="Number of Tries:" Grid.Column="7" Grid.Row="2" Foreground="#FFF2FC08" FontSize="15" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBlock Text="{Binding NumberOfTries}" Grid.Column="7" Grid.Row="3" Foreground="#FFF2FC08" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
                       
            <!-- Feedbackpluppar -->

            <Grid Grid.Column="6" Grid.Row="1">
                <Ellipse Fill="{Binding FeedbackPegs[0], Converter={StaticResource ColorConverter}}" VerticalAlignment="Top" HorizontalAlignment="Left" Height="15" Stroke="Black" Width="15" Visibility="{Binding FeedbackPegsVisibility[0], FallbackValue=Collapsed, Converter={StaticResource VisibilityConverter}}" Margin="40,5,0,0"/>
                <Ellipse Fill="{Binding FeedbackPegs[1], Converter={StaticResource ColorConverter}}" VerticalAlignment="Top" HorizontalAlignment="Right" Height="15" Stroke="Black" Width="15" Visibility="{Binding FeedbackPegsVisibility[1], FallbackValue=Collapsed, Converter={StaticResource VisibilityConverter}}" Margin="0,5,40,0"/>
                <Ellipse Fill="{Binding FeedbackPegs[2], Converter={StaticResource ColorConverter}}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="15" Stroke="Black" Width="15" Visibility="{Binding FeedbackPegsVisibility[2], FallbackValue=Collapsed, Converter={StaticResource VisibilityConverter}}" Margin="40,0,0,5"/>
                <Ellipse Fill="{Binding FeedbackPegs[3], Converter={StaticResource ColorConverter}}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="15" Stroke="Black" Width="15" Visibility="{Binding FeedbackPegsVisibility[3], FallbackValue=Collapsed, Converter={StaticResource VisibilityConverter}}" Margin="0,0,40,5"/>
            </Grid>
            <Grid Grid.Column="6" Grid.Row="2">
