<Page x:Class="SUP_G6.Views.ChoosePlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views"
      mc:Ignorable="d"
      Title="ChoosePlayerPage" Height="843" Width="1001">

    <Grid>

        <Border
            Background="Black"
            CornerRadius="70"
            Width="1000"
            Height="810"
            Opacity="0.50"
            >

        </Border>
        <Grid>
            <StackPanel Orientation="Vertical" Margin="0,0,24,260">
                <Label Content="CHOOSE YOUR PLAYER" HorizontalAlignment="Center" Margin="0 100 0 40" FontSize="60" FontWeight="Bold" FontFamily="Arial Black" Foreground="#FFF4FF00"/>
                
                <StackPanel Orientation="Horizontal">
                    <ListBox x:Name="playerListbox" ItemsSource="{Binding Players}" BorderBrush="Yellow" BorderThickness="2" Margin="200 0 0 0"  Height="274" Width="300"/>
                    <StackPanel>
                        <RadioButton GroupName="Level" x:Name="easyRadioButton" IsChecked="{Binding EasyRadioButton}" Content="EASY" Margin="20 0 0 0" FontSize="24" FontWeight="Bold" BorderBrush="Yellow" Foreground="Yellow"/>
                        <RadioButton GroupName="Level" x:Name="mediumRadioButton" IsChecked="{Binding MediumRadioButton}" Content="MEDIUM" Margin="20 20 0 20" FontSize="24" FontWeight="Bold" BorderBrush="Yellow" Foreground="Yellow"/>
                        <RadioButton GroupName="Level" x:Name="hardRadioButton" IsChecked="{Binding HardRadioButton}" Content="HARD" Margin="20 0 0 0" FontSize="24" FontWeight="Bold" BorderBrush="Yellow" Foreground="Yellow"/>
                    </StackPanel>
                </StackPanel>
                <Button Style="{StaticResource ButtonTemplate}" Content="PLAY GAME" Command="" Height="71" Width="285" Margin="0 10 0 0" Click="Button_Click" FontWeight="Bold" FontSize="22"/>
            </StackPanel>
        </Grid>

        <Grid VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal"  Width="200">
                <!--<Button Content="{Binding EasyButton, FallbackValue=Button}" Command="CreateEasyGameButtonCommand" Height="59" />
                <Button Content="{Binding MediumButton, FallbackValue=Button}" Command="CreateMediumGameButtonCommand" Height="59" />
             <Button Content="{Binding HardButton, FallbackValue=Button}" Command="CreateHardGameButtonCommand" Height="59" />-->
            </StackPanel>
        </Grid>
    </Grid>

</Page>
