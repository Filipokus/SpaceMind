<Page x:Class="SUP_G6.Views.ChoosePlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChoosePlayerPage">

    <Grid>

        <Border
            Background="White"
            CornerRadius="70"
            Width="1000"
            Height="810"
            Opacity="0.76"
            >


        </Border>
        <StackPanel Margin="0,0,24,-436">
            <Label Content="CHOOSE YOUR PLAYER" HorizontalAlignment="Center" Margin="0 100 0 40" FontSize="60" FontWeight="Bold" FontFamily="Arial Black" Foreground="#FFF4FF00"/>
            <ListBox ItemsSource="{Binding Players, FallbackValue= hej}" BorderBrush="#FF0D319B" Height="442" Width="630"/>
            <Button Content="PLAY GAME" Height="62" Width="284" Margin="0 30 0 0"/>

        </StackPanel>

    </Grid>
</Page>
