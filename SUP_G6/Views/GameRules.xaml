<Page x:Class="SUP_G6.Views.GameRulesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameRules" Height="843" Width="1001">

    <Grid>
        <Border
            Background="Black"
            CornerRadius="70"
            Width="1000"
            Height="810"
            Opacity="0.50"
            >

        </Border>
        <StackPanel Orientation="Vertical" Margin="24,0,24,260">
            <Label Content="Game Rules" HorizontalAlignment="Center" Margin="0 100 0 40" FontSize="60" FontWeight="Bold" FontFamily="Arial Black" Foreground="#FFF4FF00"/>
            <TextBox Text="{Binding GameRules}" FontSize="24" TextWrapping="Wrap" MaxHeight="250" VerticalScrollBarVisibility="Visible"></TextBox>
            <Button Style="{StaticResource ButtonTemplate}" Content="{Binding BackButton , FallbackValue=Tillbaka}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0" Height="71" Width="285" Foreground="Yellow" BorderBrush="Yellow" BorderThickness="2" Click="BackButton_Click"/>
        </StackPanel>
        </Grid>
</Page>
