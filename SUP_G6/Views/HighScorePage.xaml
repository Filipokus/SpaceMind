<Page x:Class="SUP_G6.Views.HighScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views" 
      xmlns:local2="clr-namespace:SUP_G6.Converter"
      mc:Ignorable="d" 
      Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={local2:RatioConverter}, ConverterParameter='0.9' }" 
      Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={local2:RatioConverter}, ConverterParameter='0.9' }"
      Title="GamePlayPage">
    <Page.Resources>
        <local2:RatioConverter x:Key="RatioConverter"/>
    </Page.Resources>

    <Grid>

        <Border
            Background="Black"
            CornerRadius="70"
            Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.8' }"
            Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={StaticResource RatioConverter}, ConverterParameter='0.8' }"
            Opacity="0.5" Margin="0,-10,0,10"
            ></Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Label Style="{StaticResource StarWarsFont}" Content="Highscore" Foreground="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.05'}" Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Center"/>

            <!--HighScoreTable   UI-->

            <!--Columnrubriker-->
            <Label Style="{StaticResource StarWarsFont}" Content="{Binding HighScoreColumn1, FallbackValue=Name}" Foreground="Yellow" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.02'}" Grid.Row="2" Grid.Column="2"/>
            <Label Style="{StaticResource StarWarsFont}" Content="{Binding HighScoreColumn2, FallbackValue=Time}" Foreground="Yellow" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.02'}" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2"/>
            <Label Style="{StaticResource StarWarsFont}" Content="{Binding HighScoreColumn3, FallbackValue=Tries}" Foreground="Yellow" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.02'}" Grid.Row="2" Grid.Column="6"/>

            <!--Highscore rad 1-->
            <Label Style="{StaticResource StarWarsFont}" Content="{Binding HighScoreList[0].DisplayName, FallbackValue=PLayer 1}" Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"/>
            <Label Style="{StaticResource StarWarsFont}" Content="{Binding HighScoreList[0].ElapsedTimeInSeconds, FallbackValue=Has played}" Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2"/>
            <Label Style="{StaticResource StarWarsFont}" Content="{Binding HighScoreList[0].DisplayCount, FallbackValue=tries1}"  Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="3" Grid.Column="6"/>

            <!--Highscore rad 2-->
            <Label Style="{StaticResource StarWarsFont}"  Content="{Binding HighScoreList[1].DisplayName, FallbackValue=PLayer 2}" Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2"/>
            <Label Style="{StaticResource StarWarsFont}"  Content="{Binding HighScoreList[1].ElapsedTimeInSeconds, FallbackValue=Has played}" Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2"/>
            <Label Style="{StaticResource StarWarsFont}"  Content="{Binding HighScoreList[1].DisplayCount, FallbackValue=tries2}"  Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="4" Grid.Column="6"/>

            <!--Highscore rad 3-->
            <Label Style="{StaticResource StarWarsFont}"  Content="{Binding HighScoreList[2].DisplayName, FallbackValue=PLayer 3}" Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"/>
            <Label Style="{StaticResource StarWarsFont}"  Content="{Binding HighScoreList[2].ElapsedTimeInSeconds, FallbackValue=Has played}" Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="2"/>
            <Label Style="{StaticResource StarWarsFont}"  Content="{Binding HighScoreList[2].DisplayCount, FallbackValue=tries3}"  Foreground="Black" Background="Yellow" FontWeight="Bold" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Grid.Row="5" Grid.Column="6"/>


            <!--Radiobuttons sortera lista efter svårighetsgrad-->
            <WrapPanel Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="7">
                <RadioButton Style="{StaticResource StarWarsRadioButtonFont}" GroupName="Level" x:Name="easyRadioButton" IsChecked="{Binding EasyRadioButton}" Content="{Binding RadioButtonEasy, FallbackValue=lätt}" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" FontWeight="Bold" BorderBrush="Yellow" Foreground="Yellow" VerticalContentAlignment="Center"/>
                <RadioButton Style="{StaticResource StarWarsRadioButtonFont}" GroupName="Level" x:Name="mediumRadioButton" IsChecked="{Binding MediumRadioButton}" Content="{Binding RadioButtonMedium, FallbackValue=mellan}" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" FontWeight="Bold" BorderBrush="Yellow" Foreground="Yellow"  VerticalContentAlignment="Center"/>
                <RadioButton Style="{StaticResource StarWarsRadioButtonFont}" GroupName="Level" x:Name="hardRadioButton" IsChecked="{Binding HardRadioButton}" Content="{Binding RadioButtonHard, FallbackValue=svårt}" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" FontWeight="Bold" BorderBrush="Yellow" Foreground="Yellow"  VerticalContentAlignment="Center"/>
            </WrapPanel>


            <!--Knappar för att välja vilken lista som ska hämtas-->
            <Viewbox Stretch="Uniform" Grid.Row="8" Grid.Column="3">
                <Button Style="{StaticResource ButtonTemplate}" Command="{Binding SortByTimeCommand}" Content="{Binding ButtonTime, FallbackValue=tid}" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.02'}" Width="150" Height="75" Grid.Column="3" Grid.Row="7" Click="TimeButton_Click" ClickMode="Press"/>
            </Viewbox>
            <Viewbox Stretch="Uniform" Grid.Row="8" Grid.Column="4">
                <Button Style="{StaticResource ButtonTemplate}" Command="{Binding SortByTriesCommand}" Content="{Binding ButtonTries, FallbackValue=försök}" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.02'}" Width="150" Height="75" Grid.Column="4" Grid.Row="7" Click="TriesButton_Click" ClickMode="Press"/>
            </Viewbox>
            <Viewbox Stretch="Uniform" Grid.Row="8" Grid.Column="5">
                <Button Style="{StaticResource ButtonTemplate}" Command="{Binding ShowDiligentPlayersCommand}" Content="{Binding ButtonMostPlayed, FallbackValue=spelat}" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.014'}" Width="150" Height="75" Click="MostPlayedButton_Click" ClickMode="Press"/>
            </Viewbox>

            <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="6">
                <Label Style="{StaticResource StarWarsFont}" Foreground="Yellow" FontSize="20" Content="Sort by" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="6" VerticalAlignment="Bottom" ></Label>
            </Viewbox>

            <!--Tillbakaknapp-->
            <Viewbox Stretch="Fill" Grid.Column="1" Grid.Row="8">
                <Button Style="{StaticResource ButtonTemplate}" Command="{Binding ViewStartPageCommand}" Content="{Binding ButtonBack, FallbackValue=tillbaka}" FontSize="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource RatioConverter}, ConverterParameter='0.025'}" Width="150" Height="75"/>
            </Viewbox>

        </Grid>
    </Grid>
</Page>