<Page x:Class="SUP_G6.Views.HighScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SUP_G6.Views" xmlns:local2="clr-namespace:SUP_G6.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="HighScorePage">
    <Page.Resources>
       
        <local2:HighScoreSortingConverter x:Key="HighScoreSortingConverter"/>
        
    </Page.Resources>

    <Grid>

        <Border
            Background="Black"
            CornerRadius="70"
            Width="1000"
            Height="810"
            Opacity="0.50"
            >
            


        </Border>
        <StackPanel>
            <Label Content="HIGHSCORE" HorizontalAlignment="Center" Margin="0 100 0 40" Foreground="Yellow" FontSize="60" FontWeight="Bold"/>
            <ListBox ItemsSource="{Binding OrderedList}" BorderBrush="Yellow" BorderThickness="2" Height="442" Width="630"/>
            <Button Style="{StaticResource ButtonTemplate}" Content="Back" Height="71" Width="285" Margin="0 30 0 0" Click="Button_Click"/>
            <RadioButton IsChecked="{Binding SortHighScoreStandard}" Foreground="Yellow" BorderBrush="Yellow" BorderThickness="2" Content="Senaste spel" HorizontalAlignment="Center"/>
            <RadioButton IsChecked="{Binding SortHighScoreNyName}" Foreground="Yellow" BorderBrush="Yellow" BorderThickness="2" Content="Sortera efter namn" HorizontalAlignment="Center"/>
            <RadioButton IsChecked="{Binding SortHighScoreByTries}" Foreground="Yellow" BorderBrush="Yellow" BorderThickness="2" Content="Sortera efter försök" HorizontalAlignment="Center"/>
            <Button Style="{StaticResource ButtonTemplate}" Content="Button" Command="{Binding SortHighScoreCommand}" Height="71" Width="285"/>

        </StackPanel>

    </Grid>
</Page>
